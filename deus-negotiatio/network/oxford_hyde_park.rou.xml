<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle Types -->
    <vType id="passenger" accel="2.6" decel="4.5" sigma="0.5" length="5.0" minGap="2.5" 
           maxSpeed="13.89" color="0.2,0.6,1.0" guiShape="passenger"/> <!-- 50 km/h -->
    <vType id="truck" accel="1.2" decel="3.5" sigma="0.3" length="12.0" minGap="3.0" 
           maxSpeed="11.11" color="0.8,0.4,0.1" guiShape="truck"/>
    <vType id="bus" accel="1.0" decel="3.0" sigma="0.3" length="15.0" minGap="3.0" 
           maxSpeed="11.11" color="1.0,0.8,0.0" guiShape="bus"/>

    <!-- 
    REDESIGNED ROUTES (LOS C Modified 2046) 
    Approach Sequence: Feed -> In -> Out
    -->
    
    <!-- NB (South to North) -->
    <route id="NB_r" edges="NB_feed NB_in EB_out"/>
    <route id="NB_t" edges="NB_feed NB_in NB_out"/>
    <route id="NB_l" edges="NB_feed NB_in WB_out"/>

    <!-- SB (North to South) -->
    <route id="SB_r" edges="SB_feed SB_in WB_out"/>
    <route id="SB_t" edges="SB_feed SB_in SB_out"/>
    <route id="SB_l" edges="SB_feed SB_in EB_out"/>

    <!-- EB (West to East) -->
    <route id="EB_r" edges="EB_feed EB_in NB_out"/>
    <route id="EB_t" edges="EB_feed EB_in EB_out"/>
    <route id="EB_l" edges="EB_feed EB_in SB_out"/>

    <!-- WB (East to West) -->
    <route id="WB_r" edges="WB_feed WB_in SB_out"/>
    <route id="WB_t" edges="WB_feed WB_in WB_out"/>
    <route id="WB_l" edges="WB_feed WB_in NB_out"/>

    <!-- TRAFFIC FLOWS (2046 PM Peak: 6,371 vehicles/hour) -->

    <!-- Northbound: 900 vph -->
    <flow id="NB_r_f" route="NB_r" type="passenger" begin="0" end="3600" vehsPerHour="50" departLane="0"/>
    <flow id="NB_t1_f" route="NB_t" type="passenger" begin="0" end="3600" vehsPerHour="350" departLane="0"/>
    <flow id="NB_t2_f" route="NB_t" type="passenger" begin="0" end="3600" vehsPerHour="350" departLane="1"/>
    <flow id="NB_l_f" route="NB_l" type="passenger" begin="0" end="3600" vehsPerHour="150" departLane="1"/>

    <!-- Southbound: 908 vph -->
    <flow id="SB_r_f" route="SB_r" type="passenger" begin="0" end="3600" vehsPerHour="50" departLane="0"/>
    <flow id="SB_t1_f" route="SB_t" type="passenger" begin="0" end="3600" vehsPerHour="350" departLane="0"/>
    <flow id="SB_t2_f" route="SB_t" type="passenger" begin="0" end="3600" vehsPerHour="350" departLane="1"/>
    <flow id="SB_l_f" route="SB_l" type="passenger" begin="0" end="3600" vehsPerHour="158" departLane="1"/>

    <!-- Eastbound: 1,917 vph -->
    <flow id="EB_r_f" route="EB_r" type="passenger" begin="0" end="3600" vehsPerHour="200" departLane="0"/>
    <flow id="EB_t1_f" route="EB_t" type="passenger" begin="0" end="3600" vehsPerHour="700" departLane="0"/>
    <flow id="EB_t2_f" route="EB_t" type="passenger" begin="0" end="3600" vehsPerHour="700" departLane="1"/>
    <flow id="EB_l_f" route="EB_l" type="passenger" begin="0" end="3600" vehsPerHour="317" departLane="1"/>

    <!-- Westbound: 2,646 vph -->
    <flow id="WB_r_f" route="WB_r" type="passenger" begin="0" end="3600" vehsPerHour="300" departLane="0"/>
    <flow id="WB_t1_f" route="WB_t" type="passenger" begin="0" end="3600" vehsPerHour="1000" departLane="0"/>
    <flow id="WB_t2_f" route="WB_t" type="passenger" begin="0" end="3600" vehsPerHour="1000" departLane="1"/>
    <flow id="WB_l_f" route="WB_l" type="passenger" begin="0" end="3600" vehsPerHour="346" departLane="1"/>

</routes>
